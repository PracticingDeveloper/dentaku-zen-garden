<div class="row">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Zen Garden &mdash; <%= params[:project] %></h3>
      </div>
      <div class="panel-body">
        <form method="post">
          <input type="hidden" name="project" value="<%= params[:project] %>">
          <% Project.variables(params[:project]).each do |variable| %>
            <div class="form-group">
              <label for="<%= variable %>"><%= variable %></label>
              <input type="text" class="form-control" id="<%= variable %>" name="variables[<%= variable %>]">
            </div>
          <% end %>

          <button type="submit" class="btn btn-primary">Calculate</button>
        </form>
      </div>
    </div>
  </div>
</div>
